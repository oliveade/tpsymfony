{% extends 'base.html.twig' %}

{% block body %}
<div class="min-h-screen bg-gray-100">
    <header class="bg-cyan-600 text-white p-4">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold">Tableau de bord Admin</h1>
            <nav>
                <ul class="flex space-x-4">
                    <li><a href="{{ path('app_home') }}" class="hover:underline">Accueil</a></li>
                    <li><a href="{{ path('app_logout') }}" class="hover:underline">Déconnexion</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main class="p-8 container mx-auto">
        <section class="mb-12">
            <h1 class="text-3xl font-bold">Liste des utilisateurs</h1>
            <a href="{{ path('app_user_create') }}" class="inline-block bg-cyan-500 text-white px-4 py-2 rounded hover:bg-cyan-600 mb-4">Ajouter un utilisateur</a>
            
            <table class="min-w-full bg-white border border-gray-300">
                <thead>
                    <tr>
                        <th class="py-2 px-4 border-b">Prénom</th>
                        <th class="py-2 px-4 border-b">Nom</th>
                        <th class="py-2 px-4 border-b">Email</th>
                        <th class="py-2 px-4 border-b">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                    <tr>
                        <td class="py-2 px-4 border-b">{{ user.firstname }}</td>
                        <td class="py-2 px-4 border-b">{{ user.lastname }}</td>
                        <td class="py-2 px-4 border-b">{{ user.email }}</td>
                        <td class="py-2 px-4 border-b">
                            <a href="{{ path('app_user_edit', {id: user.id}) }}" class="text-blue-500 hover:underline">Modifier</a>
                            <form action="{{ path('app_user_delete', {id: user.id}) }}" method="POST" style="display:inline;">
                                <button type="submit" class="text-red-500 hover:underline">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </section>

        <section>
            <h2 class="text-3xl font-bold mb-6">Gestion administrative</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-6">
                <div class="bg-white shadow-lg rounded-lg p-6">
                    <h3 class="text-xl font-bold mb-4">Gérer les réservations</h3>
                    <p class="text-gray-600">Consultez et modifiez les réservations des clients.</p>
                    <a href="{{ path('app_reservation_list') }}" class="bg-cyan-500 text-white px-4 py-2 mt-4 inline-block rounded hover:bg-cyan-600">Voir</a>
                </div>
                <div class="bg-white shadow-lg rounded-lg p-6">
                    <h3 class="text-xl font-bold mb-4">Gérer les plats</h3>
                    <p class="text-gray-600">Ajoutez ou modifiez les plats disponibles dans le menu.</p>
                    <a href="{{ path('app_dish_list') }}" class="bg-cyan-500 text-white px-4 py-2 mt-4 inline-block rounded hover:bg-cyan-600">Modifier</a>
                </div>
            </div>
        </section>
    </main>
</div>
{% endblock %}
