{% extends 'base.html.twig' %}
{% block body %}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Bienvenue{% endblock %}</title>
    <link href="{{ asset('build/app.css') }}" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }
    </style>
</head>
<body class="bg-gray-100 text-gray-900">

<div class="relative h-screen bg-cover bg-center" style="background-image: url('{{ asset('images/background.webp') }}');">
    <header class="bg-cyan-600 text-white p-4 opacity-75">
        <nav>
            <ul class="flex space-x-4">
                <li>Bienvenue</li>
            </ul>
        </nav>
    </header>

    <main class="p-6 relative z-10 flex justify-center">
        <a href="{{ path('app_login') }}" class="bg-cyan-600 text-white font-semibold py-2 px-4 rounded hover:bg-blue-500 transition duration-200">
            Connectez-vous
        </a>
    </main>
    
</div>
<footer class="bg-gray-800 text-white py-4">
    <div class="container mx-auto text-center">
        <p>&copy; {{ "now"|date("Y") }} Restaurant. Tous droits réservés.</p>
    </div>
</footer>
</body>
</html>
{% endblock %}
