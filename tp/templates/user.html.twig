{% extends 'base.html.twig' %}
{% block body %}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Menu{% endblock %}</title>
    <link href="{{ asset('build/app.css') }}" rel="stylesheet">
</head>
<body class="bg-gray-100 min-h-screen">

<header class="bg-blue-600 text-white p-4">
    <nav>
        <ul class="flex space-x-4 space-between">
            <li><a href="{{ path('app_user_page') }}" class="hover:underline">Accéder à mon profile</a></li>
            <li><a href="{{ path('app_reservation')}}" class="hover:underline">Réservation</a></li>
        </ul>
    </nav>
</header>

<main>
    <div class="container mx-auto p-8">
        <h1 class="text-4xl font-bold text-center mb-8">Notre Carte

        </h1>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {% for dish in dishes %}
                <div class="bg-white rounded-lg shadow-lg p-6">
                    <h2 class="text-2xl font-semibold mb-4 border-b-2 border-blue-500">{{ dish.name }}</h2>
                    <p>{{ dish.description }}</p>
                    <p class="font-bold text-xl mt-4">{{ dish.price }}€</p>
                </div>
            {% endfor %}
        </div>
    </div>
</main>
</body>
</html>
{% endblock %}
