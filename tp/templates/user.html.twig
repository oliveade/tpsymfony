{% extends 'base.html.twig' %}
{% block body %}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Menu{% endblock %}</title>
    <link href="{{ asset('build/app.css') }}" rel="stylesheet">
</head>
<body class="bg-gray-100 min-h-screen">

    <header class="bg-cyan-600 text-white p-4">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold">Mon Restaurant</h1>
            
            <nav>
                <ul class="flex space-x-4">
                    <li>Bienvenue, {{ app.user.firstName }} {{ app.user.lastName }}</li>
                    <li><a href="{{ path('app_user_page') }}" class="hover:underline">Accéder à mon profile</a></li>
                    <li><a href="{{ path('app_reservation')}}" class="hover:underline">Réservation</a></li>
                    {% if app.user %}
                     
                        <li>
                            <a href="{{ path('app_logout') }}" class="bg-cyan-500 text-white px-4 py-2 rounded hover:bg-red-600">
                                Déconnexion
                            </a>
                        </li>
                    {% else %}
                        <li>
                            <a href="{{ path('app_login') }}" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">
                                Connexion
                            </a>
                        </li>
                    {% endif %}
                  
                </ul>
            </nav>
        </div>
    </header>
    

<main>
    <div class="container mx-auto p-8">
        <h1 class="text-4xl font-bold text-center mb-8">Notre Carte
        </h1>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 bg-gray-100">
            {% for dish in dishes %}
                <div class="bg-white rounded-lg shadow-lg p-6">
                    <h2 class="text-2xl font-semibold mb-4 border-b-2 border-cyan-500">{{ dish.name }}</h2>
                    <p>{{ dish.description }}</p>
                    <p class="font-bold text-xl mt-4">{{ dish.price }}€</p>
                </div>
            {% endfor %}
        </div>
    </div>
</main>
</body>
</html>
{% endblock %}
