{% extends 'base.html.twig' %}

{% block body %}
<div class="bg-gray-100 min-h-screen flex items-center justify-center p-8">
    <div class="bg-white rounded-lg shadow-lg p-6 max-w-md text-center">
        {% for message in app.flashes('success') %}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                {{ message }}
            </div>
        {% endfor %}
        <p class="text-gray-700">Vous allez être redirigé dans quelques secondes...</p>
    </div>
</div>

<script>
    setTimeout(function() {
        window.location.href = "{{ path('app_profile') }}";
    }, 4000);
</script>
{% endblock %}
