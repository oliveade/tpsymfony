{% extends 'base.html.twig' %}

{% block body %}
<h1 class="text-3xl font-bold">Liste des réservations</h1>
<a href="{{ path('app_reservation_create') }}" class="inline-block bg-cyan-500 text-white px-4 py-2 rounded hover:bg-cyan-600 mb-4">Ajouter une réservation</a>

<table class="min-w-full bg-white border border-gray-300">
    <thead>
        <tr>
            <th class="py-2 px-4 border-b">Date et Heure</th>
            <th class="py-2 px-4 border-b">Nombre de personnes</th>
            <th class="py-2 px-4 border-b">Statut</th>
            <th class="py-2 px-4 border-b">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for reservation in reservations %}
        <tr>
            <td class="py-2 px-4 border-b">{{ reservation.reservationDate|date('Y-m-d H:i') }}</td>
            <td class="py-2 px-4 border-b">{{ reservation.numberOfPeople }}</td>
            <td class="py-2 px-4 border-b">{{ reservation.status }}</td>
            <td class="py-2 px-4 border-b">
                <a href="{{ path('app_reservation_edit', {id: reservation.id}) }}" class="text-blue-500 hover:underline">Modifier</a>
                <form action="{{ path('app_reservation_delete', {id: reservation.id}) }}" method="POST" style="display:inline;">
                    <button type="submit" class="text-red-500 hover:underline">Supprimer</button>
                </form>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
